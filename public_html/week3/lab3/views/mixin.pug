mixin generateGridColors(numbers)
    table(border="1")   
        tbody
          - for (var row =0; row < numbers; row++)
            tr
                - for (var col =0; col < numbers; col++)
                    -var color = '#' + ((1<<24)*Math.random()|0).toString(16);
                    td(style={background: color}) #{color}
                        br
                        span(style="color: white;") #{color}
                        
                    